doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		title Screenshots
		base(target='_top')
		link(rel='stylesheet', type='text/css', href='/depictions/style/style.css')
		meta(name='viewport', content='width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
		meta(name='format-detection', content='telephone=no')
		script(type='text/javascript', src='/depictions/js/thankssaurik.js')
	body.pinstripe
		panel
			label Screenshots
			fieldset
				div
					center
						if screenshots && screenshots[0]
							-for (var i=0; i<screenshots.length; i++)
								-var shot = screenshots[i];
								-if (shot != '.DS_Store')
									-var fullpath = path + shot;
									if (i!=0)
										br
									img(src='#{fullpath}', width='100%')
									br
						else
							p No screenshots found :(
